<%= render 'shared/errors' %>
<% action = @band.persisted? ? band_url(@band) : bands_url %>
<% submit_string = @band.persisted? ? "Edit" : "Enter" %>
<% method = @band.persisted? ? "PATCH" : "POST" %>

<form action="<%= action %>" method="POST">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= auth_token %>
  <label for="band_name">Name</label>
  <input type="text" name="band[name]" value="<%= @band.name %>">
  <br>

  <input type="submit" value="<%= submit_string %>">
</form>

<p>
  <%= link_to "<<< Bands", bands_url, method: :get %>
</p>
